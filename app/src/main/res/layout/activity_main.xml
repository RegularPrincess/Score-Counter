<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.jmfedorov.countergame.MainActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="50dp"
            app:layout_heightPercent="10%"
            app:srcCompat="@android:drawable/stat_notify_sync_noanim"
            android:id="@+id/resetButton"
            android:elevation="1dp"
            android:tint="#22d315"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent" />

        <TextView
            android:text="@string/startTime"
            app:layout_heightPercent="10%"
            android:layout_width="wrap_content"
            android:id="@+id/tTime"
            android:textSize="24sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/baseValue"
            android:textSize="24sp"
            android:textColor="?android:attr/textColorTertiary"
            android:gravity="right|center_vertical"
            android:layout_toRightOf="@+id/resetButton"
            android:layout_alignBaseline="@+id/tTime"
            android:text="@string/startValueOfCounter" />



        <GridLayout
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:background="#5339e82a"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <GridLayout
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:background="#53e82a2d"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

        <GridLayout
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:background="#5339e82a"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <GridLayout
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:background="#53e82a2d"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <com.example.jmfedorov.countergame.UpsideDownText
            android:text="01"
            android:id="@+id/one"
            android:layout_width="match_parent"
            app:layout_heightPercent="45%"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="200sp"
            android:gravity="top"
            android:layout_alignParentTop="true">
        </com.example.jmfedorov.countergame.UpsideDownText>

        <TextView
            android:text="02"
            app:layout_heightPercent="45%"
            android:layout_width="match_parent"
            android:id="@+id/two"
            android:textSize="200sp"
            android:textColor="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:layout_alignParentBottom="true" />


    </android.support.percent.PercentRelativeLayout>




</RelativeLayout>
